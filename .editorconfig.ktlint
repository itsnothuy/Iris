[*.{kt,kts}]

# Disable wildcard imports (use specific imports)
disabled_rules = no-wildcard-imports

# Maximum line length
max_line_length = 120

# Import layout
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^

# Indent size
indent_size = 4

# Allow multiple consecutive blank lines in imports only
insert_final_newline = true
