# EditorConfig for iris_android
# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Kotlin files
[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^

# XML files (Android layouts, manifests)
[*.xml]
indent_style = space
indent_size = 4

# Gradle files
[*.gradle.kts]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# C/C++ files (for llama.cpp)
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2
max_line_length = 100

# CMake files
[CMakeLists.txt]
indent_style = space
indent_size = 2
